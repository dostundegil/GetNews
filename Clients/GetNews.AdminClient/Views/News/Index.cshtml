@model List<GetNews.AdminClient.Models.NewsModels.NewsVM>


<div class="row">
    <div class="col-md-12">
        <div class="card-body">
            <h5 class="card-title">Kurslar</h5>

            @if (Model.Any())
            {
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Resim</th>
                            <th>Başlık</th>
                            <th>Özet</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td> <img style="width:72px" src="@item.image_url" class="img-thumbnail" /> </td>
                                <td>@item.Title</td>
                                <td>@item.Summary</td>
                                <td>
                                    <a asp-controller="News" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm">Güncelle</a>
                                    <a asp-controller="News" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
                <a asp-controller="News" asp-action="Create" class="btn btn-primary mb-3">Haber Oluştur</a>
            }
            else
            {
                <div class="alert alert-info">
                    Haber bulunamadı
                </div>

                <a asp-controller="News" asp-action="Create" class="btn btn-primary mb-3">Haber Oluştur</a>
            }
        </div>
    </div>
</div>