@model GetNews.AdminClient.Models.UserModels.UserVM
@{
    ViewData["Title"] = "Register";
}

<div class="container m-3">
    <div class="row">
        <div class="col-md-4 offset-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Kayıt Ol</h5>
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    <form asp-controller="Register" asp-action="Index" method="post">
                        <div class="form-group">
                            <label asp-for="Email" for="exampleInputEmail1"></label>
                            <input asp-for="Email" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Mailinizi Giriniz">
                            <span class="text-danger" asp-validation-for="Email"></span>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Kullanıcı Adı</label>
                            <input asp-for="UserName" type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Kullanıcı Adı">
                            <span class="text-danger" asp-validation-for="Email"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password" for="exampleInputPassword1"></label>
                            <input asp-for="Password" type="password" class="form-control" id="exampleInputPassword1" placeholder="Şifre">
                            <span class="text-danger" asp-validation-for="Password"></span>
                        </div>
                        <button type="submit" class="mt-3 btn btn-primary">Kayıt Ol</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
